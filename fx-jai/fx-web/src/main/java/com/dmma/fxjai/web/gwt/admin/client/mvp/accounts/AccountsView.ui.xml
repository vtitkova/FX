<ui:UiBinder xmlns:ui= "urn:ui:com.google.gwt.uibinder"
             xmlns:g = "urn:import:com.google.gwt.user.client.ui"
             xmlns:dp = "urn:import:com.google.gwt.user.datepicker.client" 
             xmlns:etf = "urn:import:com.dmma.base.gwt.client.ui.etf">
   
    <ui:with field="msg" type="com.dmma.base.gwt.client.resources.i18n.BaseMessages" />
    
    <ui:style>
	    .table {
	    	margin: 5px;
	    }
    </ui:style>
    
    <g:HTMLPanel>
		<table width="100%" cellpadding="0"	cellspacing="0" >
			<tr>
				<td>
					<etf:EtfTable addStyleNames="{style.table}" ui:field="mailTemplatesTable" />
				</td>
			</tr>
			<tr>
				<td>
					<g:Button ui:field="refreshButton" text="{msg.refresh}"></g:Button>
				</td>
			</tr>
		</table>
    </g:HTMLPanel>
</ui:UiBinder>